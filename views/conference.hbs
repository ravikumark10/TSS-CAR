    font-size: 28px;
    font-weight: 500;
    line-height: 42px;
    text-align: center;
}

#c-form label{
    display: block;
    margin-top: 13px;
    font-size: 14px;
    font-weight: 500;
}
#c-form input{
    display: block;
    height: 35px;
    width: 100%;
    background-color: rgba(255,255,255,0.07);
