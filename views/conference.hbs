    height: 650px;
    width: 400px;
    background-color: lightslategrey;
    position: absolute;
    transform: translate(-50%,-50%);
    top: 55%;
    left: 80%;
    border-radius: 10px;
    backdrop-filter: blur(10px);
    border: 2px solid rgba(255,255,255,0.1);
    box-shadow: 0 0 40px rgba(8,7,16,0.6);
    padding: 50px 35px;
}
